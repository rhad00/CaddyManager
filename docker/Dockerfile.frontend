# Stage 1: Build the frontend with Vite
FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

# Stage 2: Serve static content with Nginx
FROM nginx:stable-alpine AS production

# Copy built assets to Nginx web root
COPY --from=builder /app/dist /usr/share/nginx/html

# Optional: Custom Nginx config (uncomment if you have it)
# COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Configure nginx to listen on port 5173
RUN sed -i 's/listen\s*80;/listen 5173;/g' /etc/nginx/conf.d/default.conf

EXPOSE 5173
CMD ["nginx", "-g", "daemon off;"]
