# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# Set both POSTGRES_DB=true and POSTGRES_URL to use PostgreSQL instead of SQLite
POSTGRES_DB=false
POSTGRES_URL=postgresql://postgres:postgres@db:5432/caddymanager

# SQLite Configuration (used when POSTGRES_DB is false)
SQLITE_DATA_DIR=data  # Directory for SQLite database files, relative to backend folder

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1d

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173

# Admin User Setup
ADMIN_EMAIL=admin@caddymanager.local
ADMIN_PASSWORD=Admin123!

# Caddy Configuration
CADDY_API_URL=http://caddy:2019

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# Logging
LOG_LEVEL=debug  # debug, info, warn, error
